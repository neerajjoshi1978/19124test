<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">





    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".01"


        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".4"


        />

    <ImageView
        android:id="@+id/sg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/hor2"
        android:src="@drawable/sg"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".55"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".75"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".95"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor6"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".36"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".40"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".60"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".90"/>


    <TextView
        android:id="@+id/btn1"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hor6"
        app:layout_constraintStart_toStartOf="@id/ver1"
        app:layout_constraintEnd_toEndOf="@+id/ver2"
        app:layout_constraintBottom_toTopOf="@+id/hor3"
        />
    <TextView
        android:id="@+id/btn2"
        android:background="@color/red"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hor6"
        app:layout_constraintStart_toStartOf="@+id/ver3"
        app:layout_constraintEnd_toEndOf="@+id/ver4"
       app:layout_constraintBottom_toBottomOf="@+id/hor3"

        />

    <TextView
        android:id="@+id/btn3"
        android:background="@color/green"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hor3"
        app:layout_constraintStart_toStartOf="@+id/ver1"
        app:layout_constraintEnd_toEndOf="@+id/ver2"
        app:layout_constraintBottom_toBottomOf="@+id/hor4"

        />

    <TextView
        android:id="@+id/btn4"
        android:background="@color/brown"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hor3"
        app:layout_constraintStart_toStartOf="@+id/ver3"
        app:layout_constraintEnd_toEndOf="@+id/ver4"
        app:layout_constraintBottom_toBottomOf="@+id/hor4"

        />
    <TextView
        android:id="@+id/btn5"
        android:background="@color/blue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hor4"
        app:layout_constraintStart_toStartOf="@+id/ver1"
        app:layout_constraintEnd_toEndOf="@+id/ver2"
        app:layout_constraintBottom_toBottomOf="@+id/hor5"


        />
    <TextView
        android:id="@+id/btn6"
        android:background="@color/black"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hor4"
        app:layout_constraintStart_toStartOf="@+id/ver3"
        app:layout_constraintEnd_toEndOf="@+id/ver4"
        app:layout_constraintBottom_toBottomOf="@+id/hor5"


        />



        />






</androidx.constraintlayout.widget.ConstraintLayout>